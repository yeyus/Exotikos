<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            tools:text="A54"
            android:layout_width="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Display2"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dmGateSize"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/fragment_horizontal_margin"
            android:id="@+id/tvBoardingGate" />

        <TextView
            tools:text="Terminal 3"
            android:layout_width="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
            android:textSize="@dimen/dmTerminalSize"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBoardingGate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:id="@+id/tvTerminal" />

        <TextView
            android:text="You have 1hr 45min to board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
            android:id="@+id/tvTimetoBoard"
            android:layout_below="@+id/tvTerminal"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</layout>