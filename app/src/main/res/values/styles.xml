<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorAccent">@color/accent</item>
        <item name="actionBarStyle">@style/ExotikosActionBar</item>
        <item name="android:actionBarStyle">@style/ExotikosActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppThemeActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorAccent">@color/accent</item>
        <item name="actionBarStyle">@style/ExotikosActionBar</item>
        <item name="android:actionBarStyle">@style/ExotikosActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ExotikosActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/primary_light</item>
        <item name="background">@color/primary_light</item>
    </style>

    <style name="ExotikosToolbar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="actionMenuTextColor">@color/primary_text</item>
        <item name="android:background">@color/primary_light</item>
        <!--<item name="background">@color/twitter_blue</item>-->
        <item name="colorControlNormal">@color/accent</item>
    </style>

    <color name="flight_item_background_guard">#b0ffffff</color>
    <color name="flight_item_font">#ff000000</color>
</resources>
